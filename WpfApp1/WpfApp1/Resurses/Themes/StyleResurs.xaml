<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="Standatrbtn">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="FontFamily" Value="Robot"></Setter>
        <Setter Property="FontSize" Value="15"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Margin" Value="4,4,4,4"></Setter>
    </Style>

    <Style TargetType="Grid" x:Key="StandatrGrid">
        <Setter Property="Margin" Value="3,3,3,3"></Setter>
    </Style>

    <Style TargetType="StackPanel" x:Key="StandatrStakPanel">
        <Setter Property="Margin" Value="2,2,2,2"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="StandatrText">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="FontFamily" Value="Robot"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
    </Style>
</ResourceDictionary>